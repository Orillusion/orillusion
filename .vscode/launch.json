  "version": "0.2.0",
  "configurations": [
    {
      "args": ["sort"],
      "name": "Gulp sort",
      "program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "name": "Attach 8000",
      "port": 9222,
      "request": "attach",
      "type": "pwa-chrome",
      "url": "http://127.0.0.1:8000/",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
