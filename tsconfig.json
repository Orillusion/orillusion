{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": ["ESNext", "DOM"],
        "moduleResolution": "bundler",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noEmit": true,
        "rootDir": "./",
        "baseUrl": "./",
        "outDir": "./js",
        "paths": {
            "../*": ["src/*"],
            "@orillusion/*": ["src/libs/*"],
            "@orillusion/core": ["src"]
        },
        "types": ["vite/client", "@webgpu/types"],
        // for dev
        // "noUnusedLocals": true,
        // "noUnusedParameters": true,
        // "noImplicitReturns": true,
        "allowJs": true,
        "strict": false
    },  
    "include": ["src", "test", "sample"],
    "exclude": ["node_modules", "dist", "public"]
}