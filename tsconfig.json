{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": ["ESNext", "DOM"],
        "moduleResolution": "bundler",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "declaration": true,
        "noEmit": true,
        "rootDir": "./",
        "baseUrl": "./",
        "paths": {
            "../*": ["src/*"],
            "@orillusion/*": ["packages/*"],
            "@orillusion/core": ["src"],
            "@samples/*": ["samples/*"],
            "dat.gui": ["packages/debug/dat.gui.module"]
        },
        "types": ["vite/client", "@webgpu/types"],
        // for dev
        // "noUnusedLocals": true,
        // "noUnusedParameters": true,
        // "noImplicitReturns": true,
        "allowJs": true,
        "strict": false,
        "experimentalDecorators": true
    },  
    "include": ["src", "test", "samples"],
    "exclude": ["node_modules", "dist", "public"]
}